@model EC2_1601226.Models.Bag


@{
    ViewData["Title"] = "Details";

}

<h1 style="text-align:center">BAG DETAIL</h1>
<hr />
<div class="wrapper">
    <div class="product-img">
        <img src="~/Images/@Html.DisplayFor(model => model.Image)" height="420" width="327" />
    </div>
    <div class="product-info">
        <h4>@Html.DisplayFor(model => model.Brand)</h4>
        <hr />
        <div class="product-text">

            <h1>@Html.DisplayFor(model => model.Name)</h1>
            <hr />
            <h2>Model: @Html.DisplayFor(model => model.Model) </h2>
            <h2>Manufactured Date: @Html.DisplayFor(model => model.ManufactureDate)</h2>
            <h2>Available Quantity: @Html.DisplayFor(model => model.Quantity)</h2>
        </div>
        <div class="product-price-btn">
            <p>Price: <span>@Html.DisplayFor(model => model.Price)</span></p>

        </div>

       
    </div>
</div>

<hr />
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
