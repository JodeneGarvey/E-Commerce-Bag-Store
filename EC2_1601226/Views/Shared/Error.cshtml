@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

@if(ViewBag.ErrorTitle == null)
{
    <div class="container" style="text-align:center">
        <h1 class="text-danger">Error.</h1>
        <h2 class="text-danger">An error occurred while processing your request.The support team is notified and we are woking on the fix</h2>

        <h3 class="text-danger">Please contact us at bagstore@gmail.com</h3>

        <img src="~/Images/error.png" style="height:300px;width:300px" />
    </div>
}
else
{
    <h1 class="text-danger">@ViewBag.ErrorTitle</h1>
    <h6 class="text-danger">@ViewBag.ErrorMessage</h6>
}


